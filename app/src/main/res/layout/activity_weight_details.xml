<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activityWeightDetails">

    <TextView
            android:text="0"
            android:layout_width="141dp"
            android:layout_height="89dp" android:id="@+id/mass_display"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="70dp" android:layout_marginStart="76dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="112dp"
            android:layout_height="89dp"
            android:id="@+id/units"
            app:layout_constraintStart_toEndOf="@+id/mass_display"
            android:text="kg"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textSize="70dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/mass_display"/>
    <ScrollView
            android:layout_width="393dp"
            android:layout_height="459dp"
            android:id="@+id/scrollView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mass_display" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <EditText
                    android:layout_width="394dp"
                    android:layout_height="82dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/shipper_name_field"
                    android:hint="Shipper Name"/>
            <EditText
                    android:layout_width="395dp"
                    android:layout_height="86dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/reference_field"
                    android:hint="Reference"/>
            <EditText
                    android:layout_width="393dp"
                    android:layout_height="71dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/container_id_field"
                    android:layout_marginTop="8dp"
                    android:hint="Container ID"/>
            <EditText
                    android:layout_width="205dp"
                    android:layout_height="70dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/tare_field"
                    android:hint="Tare"/>
            <EditText
                    android:layout_width="399dp"
                    android:layout_height="62dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/seal_id_field"
                    android:hint="Seal ID"/>
            <EditText
                    android:layout_width="395dp"
                    android:layout_height="83dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/location_field"
                    android:hint="Location"/>
            <EditText
                    android:layout_width="392dp"
                    android:layout_height="75dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/operator_field" android:layout_marginTop="8dp"
                    android:hint="Operator"/>
            <EditText
                    android:layout_width="402dp"
                    android:layout_height="79dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/notes_field" android:layout_marginTop="8dp"
                    android:hint="Notes"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/confirm_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>